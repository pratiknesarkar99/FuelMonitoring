<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090909"
    android:orientation="vertical"
    tools:context=".user.UserRegistration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:gravity="center"
                android:text="Registration Form"
                android:textColor="#00897B"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/firstname"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                android:autofillHints=""
                android:background="@drawable/ovaledittext"
                android:ems="10"
                android:hint="Enter First Name"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#FCFCFC"
                android:textColorHint="#7CF8F7F7"
                android:textStyle="bold"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/lastname"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="35dp"
                android:autofillHints=""
                android:background="@drawable/ovaledittext"
                android:ems="10"
                android:hint="Enter Last Name"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#FCFCFC"
                android:textColorHint="#7CF8F7F7"
                android:textStyle="bold"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/mobile"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                android:autofillHints=""
                android:background="@drawable/ovaledittext"
                android:ems="10"
                android:hint="Enter Contact No"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#FCFCFC"
                android:textColorHint="#7CF8F7F7"
                android:textStyle="bold"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/email"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="35dp"
                android:autofillHints=""
                android:background="@drawable/ovaledittext"
                android:ems="10"
                android:hint="Enter e-mail address"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#FCFCFC"
                android:textColorHint="#7CF8F7F7"
                android:textStyle="bold"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Gender"
                android:textColor="#00897B"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/malerb"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:buttonTint="#D81B60"
                    android:text="Male"
                    android:textColor="#00897B"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/femalerb"
                    android:layout_width="131dp"
                    android:layout_height="match_parent"
                    android:buttonTint="#D81B60"
                    android:text="Female"
                    android:textColor="#00897B"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/otherrb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:buttonTint="#D81B60"
                    android:text="Other"
                    android:textColor="#00897B"
                    android:textStyle="bold" />

            </RadioGroup>

            <Button
                android:id="@+id/datepickerbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/circle"
                android:text="Select Date of Birth"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dob"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="35dp"
                android:autofillHints=""
                android:background="@drawable/ovaledittext"
                android:ems="10"
                android:gravity="center"
                android:hint="D.O.B"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#FCFCFC"
                android:textColorHint="#7CF8F7F7"
                android:textStyle="bold"
                tools:targetApi="o" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ovaledittext"
                    android:ems="10"
                    android:hint="City"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ovaledittext"
                    android:ems="10"
                    android:hint="State"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#7CFFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="35dp"
                android:autofillHints=""
                android:background="@drawable/ovaledittext"
                android:ems="10"
                android:hint="Enter a strong password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#79FFFFFF"
                android:textStyle="bold"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="35dp"
                android:autofillHints=""
                android:background="@drawable/ovaledittext"
                android:ems="10"
                android:hint="Re-enter above password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#79FFFFFF"
                android:textStyle="bold"
                tools:targetApi="o" />

            <Button
                android:id="@+id/RegisterBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/circle"
                android:text="Register"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>