<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#090909"
    tools:context="com.example.fuelmonitoring.admin.AdminRegistration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bordercayn"
                android:gravity="center"
                android:text="@string/registration_form"
                android:textColor="#00897B"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/adminEmail"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:autofillHints=""
                android:background="@drawable/ovaledittext"
                android:ems="10"
                android:hint="Enter e-mail address"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:textColor="#FCFCFC"
                android:textColorHint="#60F8F7F7"
                android:textStyle="bold"
                android:layout_marginStart="33dp"
                android:layout_marginEnd="35dp" />

            <EditText
                android:id="@+id/adminPassword"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/ovaledittext"
                android:ems="10"
                android:hint="@string/enter_strong_password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:textColor="#FCFCFC"
                android:textColorHint="#7CF8F7F7"
                android:textStyle="bold"
                android:autofillHints=""
                android:layout_marginStart="33dp"
                android:layout_marginEnd="35dp" />

            <EditText
                android:id="@+id/adminConfirmPasswd"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/ovaledittext"
                android:ems="10"
                android:hint="@string/re_enter_above_password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:textColor="#FCFCFC"
                android:textColorHint="#7CF8F7F7"
                android:textStyle="bold"
                android:autofillHints="" />

            <EditText
                android:id="@+id/secretCode"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/ovaledittext"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/enter_secret_code"
                android:inputType="numberPassword"
                android:padding="10dp"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:textColor="#FCFCFC"
                android:textColorHint="#7CFF0000"
                android:textStyle="bold"
                android:autofillHints="" />

            <Button
                android:id="@+id/RegisterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/circle"
                android:text="@string/register_button"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="33dp"
                android:layout_marginEnd="35dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
